{
  "builds": [
    {
      "src": "image_converter/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build"
    }
  ],
  "scripts": {
    "build": "python manage.py collectstatic --noinput --clear"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "image_converter/wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    }
  ]
}
